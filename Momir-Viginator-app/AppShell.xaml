<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Momir_Viginator_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Momir_Viginator_app"
    Title="Momir_Viginator_app">

    <FlyoutItem Title="Generator" Icon="icons/cards.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:Generator}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Card search" Icon="icons/search.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:CardSearch}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="icons/settings.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:Settings}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="About" Icon="icons/about.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:About}" />
        </Tab>
    </FlyoutItem>

</Shell>
